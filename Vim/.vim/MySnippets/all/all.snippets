#Boxes {{{

snippet box1 "(box) style (1)"
`!p snip.rv = '┌' + '─' * (len(t[1]) + 2) + '┐'`
│ ${1:${VISUAL}} │
`!p snip.rv = '└' + '─' * (len(t[1]) + 2) + '┘'`
endsnippet

snippet box2 "(box) style (2)"
`!p snip.rv = '╔' + '═' * (len(t[1]) + 2) + '╗'`
║ ${1:${VISUAL}} ║
`!p snip.rv = '╚' + '═' * (len(t[1]) + 2) + '╝'`
endsnippet

snippet box3 "(box) style (3)"
`!p snip.rv = '█' + '▀' * (len(t[1]) + 2) + '█'`
▌ ${1:${VISUAL}} ▐
`!p snip.rv = '█' + '▄' * (len(t[1]) + 2) + '█'`
endsnippet

snippet "box4\((.{1})\,(\d+)\)" "(box) style (4)" ir
`!p snip.rv = match.group(1) * (len(t[1]) + (int(match.group(2))+1)*2)`
`!p snip.rv = match.group(1)``!p snip.rv = " " * int(match.group(2))`$1`!p snip.rv = " " * int(match.group(2))``!p snip.rv = match.group(1)`
`!p snip.rv = match.group(1) * (len(t[1]) + (int(match.group(2))+1)*2)`
endsnippet

