extends htmldjango

snippet dm "A simple HTML tag" bA
<${1:tag}>
	${VISUAL}$2
</${1/(\w+).*/$1/}>
endsnippet

snippet mk "A simple intline HTML tag" iA
<${1:tag}>${VISUAL}$2</${1/(\w+).*/$1/}>
endsnippet

snippet cblock
<!--
${VISUAL}$1
--!>
endsnippet

snippet br "Break line" i
<br>
endsnippet

# !1| --------------------------------------------------
# !1| Tag—ï
# !1| --------------------------------------------------
snippet favicon "." b
[.ico]
<link rel="icon" type="image/x-icon" href="$1">
[.gif, .png, .jpg]
<link rel="icon" type="image/ico" href="$1">
endsnippet

snippet css "CSS style inserter" b
<link rel="stylesheet" type="text/css" href="$1">
endsnippet

snippet js "." b
<script type="text/javascript" src="$1"></script>  
endsnippet
